{
    "manifest_version": 3,
    "name": "Element Outliner",
    "version": "1.0",
    "description": "Adds Outlines to Elements",
    "author":{
        "email": "cj.ceps@gmail.com"
    },
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
          "resources": ["/fonts/*.*"],
          "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }, 
    "host_permissions": [
        "<all_urls>"
      ],
    "permissions": [
        "scripting", "storage", "tabs"
    ],
    "commands": {
        "toggle-outline": {
            "suggested_key": {
              "default": "Ctrl+Q",
              "mac": "MacCtrl+Q",
              "linux": "Ctrl+Q",
              "chromeos": "Ctrl+Q"
            },
            "description": "Toggle Outline"
          }
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
  }