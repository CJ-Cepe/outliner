{
    "manifest_version": 3,
    "name": "Outliner",
    "version": "1.0",
    "description": "A simple html element outliner",
    "author":{
        "email": "cj.ceps@gmail.com"
    },
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
          "resources": ["/fonts/*.*"],
          "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }, 
    "host_permissions": [
        "<all_urls>"
      ],
    "permissions": [
        "scripting", "storage", "tabs"
    ]
  }